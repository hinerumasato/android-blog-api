        {
            "name": "users",
            "description": "User management, CRUD operations"
        },
        {
            "name": "posts",
            "description": "Post management, CRUD operations"
        },
        {
            "name": "categories",
            "description": "Category management, CRUD operations"
        },
        {
            "name": "auth",
            "description": "Authentication operations"
        },
        {
            "name": "love post",
            "description": "Love post operations"
        },
        {
            "name": "comments",
            "description": "Comment management, CRUD operations, root comment will have replyTo = null"
        }
