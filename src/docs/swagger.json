{
    "openapi": "3.1.0",
    "info": {
        "title": "Blog API",
        "version": "1.0.0",
        "description": "This API serves as the backend for a blog application tailored for Android devices, providing a robust platform for users to create, read, update, and delete blog posts. It supports user authentication, allowing for personalized experiences such as saving favorite posts and managing user profiles. Additionally, the API facilitates interactions between users through comments and likes on posts, enhancing the community aspect of the blogging platform.",
        "contact": {
            "name": "Thang Loi Tran",
            "email": "thangloitran406@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "servers": [
        {
            "url": "http://localhost:3000/api/v1",
            "description": "Base API URL"
        }
    ],
